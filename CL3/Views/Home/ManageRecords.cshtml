@model ManageRecordsViewModel
@{
    ViewData["Title"] = "Manage Records";
}

<div class="container mt-4">
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <h2 class="mb-4">Manage Records</h2>

    <!-- Customers Section -->
    <div class="card mb-4">
        <div class="card-header">
            <h3 class="mb-0">Customers</h3>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var customer in Model.Customers)
                        {
                            <tr>
                                <td>@customer.FirstName @customer.SecondName</td>
                                <td>@customer.Email</td>
                                <td>@customer.PhoneNumber</td>
                                <td>
                                    <form asp-action="DeleteCustomer" method="post" style="display: inline;">
                                        <input type="hidden" name="id" value="@customer.Id" />
                                        <button type="submit" class="btn btn-danger btn-sm"
                                                onclick="return confirm('Are you sure you want to delete this customer?')">
                                            Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Products Section -->
    <div class="card mb-4">
        <div class="card-header">
            <h3 class="mb-0">Products</h3>
        </div>
        <div class="card-body">
            <div class="row">
                @foreach (var product in Model.Products)
                {
                    <div class="col-md-3 mb-3">
                        <div class="card">
                            <img src="~/uploads/@product.Image" class="card-img-top" alt="Product Image" />
                            <div class="card-body text-center">
                                <form asp-action="DeleteProduct" method="post">
                                    <input type="hidden" name="id" value="@product.Id" />
                                    <button type="submit" class="btn btn-danger btn-sm"
                                            onclick="return confirm('Are you sure you want to delete this product?')">
                                        Delete
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Orders Section -->
    <div class="card mb-4">
        <div class="card-header">
            <h3 class="mb-0">Orders</h3>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>File</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model.Orders)
                        {
                            <tr>
                                <td>@order.OrderID</td>
                                <td>@order.UploadedFile</td>
                                <td>
                                    <form asp-action="DeleteOrder" method="post" style="display: inline;">
                                        <input type="hidden" name="id" value="@order.OrderID" />
                                        <button type="submit" class="btn btn-danger btn-sm"
                                                onclick="return confirm('Are you sure you want to delete this order?')">
                                            Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <footer>
        <p>&copy; 2024 ABC Retail. All rights reserved.</p>
    </footer>
</div>